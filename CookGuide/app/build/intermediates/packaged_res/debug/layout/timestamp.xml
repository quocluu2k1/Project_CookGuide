<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@drawable/custom_button_circle_close"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="47dp">

        </ImageButton>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="56dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_shape"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/circular_progress_bar" />
                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format24Hour="hh:mm:ss"
                    android:text="01:00:00"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="105dp"
                    android:textSize="32sp"></TextClock>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bấm thời gian"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"></TextView>
        <ImageButton
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:src="@drawable/ic_baseline_play_circle_filled_24"
            android:layout_gravity="center"
            android:padding="0sp"
            android:background="#ffff"
            android:layout_marginTop="39dp"></ImageButton>


</LinearLayout>