<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/frame_461"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/allbackground"
        android:clipToOutline="true">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/logoutbackground">

            <Button
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_log_out"
                android:textAppearance="@style/ng_xu_t"></Button>

            <TextView
                android:id="@+id/ng_xu_t"
                android:layout_width="58dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="31dp"
                android:gravity="top"
                android:text="Đăng Xuất"
                android:textAppearance="@style/ng_xu_t" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/mg" />

        <TextView
            android:id="@+id/nguy_n_v_n_"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="23dp"
            android:gravity="top"
            android:text="Nguyễn Văn A"
            android:textAppearance="@style/nguy_n_v_n_" />

        <TextView
            android:id="@+id/ngvaa"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="57dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="4sp"
            android:text="@string/ngvaa"
            android:textAppearance="@style/nguy_n_van_"
            android:translationY="-2.25sp" />

    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="387dp"
        android:layout_height="45dp"
        android:layout_marginTop="122dp"
        android:paddingTop="0dp"
        app:tabContentStart="0dp"
        app:tabIndicatorColor="#2196F3"
        app:tabMode="fixed"
        app:tabPaddingStart="12dp"
        app:tabPaddingTop="0dp"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/h_s_"
        app:tabTextColor="#AAB2C8"
        app:tabUnboundedRipple="false"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="103dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Món đã lưu" />
    </com.google.android.material.tabs.TabLayout>
    <View
        android:id="@+id/rectangle_4"
        android:layout_width="336dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="173dp"
        android:background="@drawable/rectangle_5" />


    <androidx.appcompat.widget.SearchView
        android:layout_width="336dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="173dp">

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="231dp"
            android:background="@drawable/search"
            android:clipToOutline="true" />
    </androidx.appcompat.widget.SearchView>

    <TextView
        android:id="@+id/t_m_m_n_c_c"
        android:layout_width="271dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="180dp"
        android:gravity="top"
        android:text="Nhập món cần tìm"
        android:textAppearance="@style/nguy_n_van_" />

    <TextView
        android:id="@+id/b_n_n_u_m_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="222dp"
        android:gravity="center_horizontal|top"
        android:text="Bạn đã nấu món này chưa?"
        android:textAppearance="@style/b_n_n_u_m_n" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="252dp"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    app:srcCompat="@drawable/food2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/food2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    app:srcCompat="@drawable/food2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/food2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    app:srcCompat="@drawable/food2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/food2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="34dp"
                    app:srcCompat="@drawable/food2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/food2" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>