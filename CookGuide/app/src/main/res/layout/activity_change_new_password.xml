<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ChangeNewPasswordActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Tạo mật khẩu mới"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập mật khẩu mới của bạn bên dưới"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/img_1" />

    <EditText
        android:id="@+id/oldpw"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:drawableRight="@drawable/__password"
        android:ems="10"
        android:hint="Old password"
        android:inputType="textPassword"
        android:textColorHint="#808080	"
        android:background="@drawable/rectangle_7"
        android:paddingLeft="15dp"/>

    <EditText
        android:layout_gravity="center"
        android:id="@+id/newpw"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:drawableRight="@drawable/__password"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="New password"
        android:textColorHint="#808080"
        android:background="@drawable/rectangle_7"
        android:paddingLeft="15dp"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/buttonChangeNewPassword"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="40dp"
        android:text="ĐỔI MẬT KHẨU"
        android:textColor="@color/white"
        android:background="#0386D0" />
</LinearLayout>