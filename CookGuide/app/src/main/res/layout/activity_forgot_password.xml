<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="123dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/cook_guide_logo" />

    <TextView
        android:layout_gravity="center"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Quên mật khẩu"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textStyle="bold" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="Vui lòng điền địa chỉ Email của bạn dưới đây để lấy lại mật khẩu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/editTextForgotPasswordEmail"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="40dp"
        android:drawableRight="@drawable/__email"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:hint="Địa chỉ Email"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="@drawable/rectangle_7"/>

    <Button
        android:clickable="true"
        android:layout_gravity="center"
        android:id="@+id/buttonGetNewPassword"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="40dp"
        android:background="#0386D0"
        android:text="Lấy lại mật khẩu"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextForgotPasswordEmail" />

</LinearLayout>