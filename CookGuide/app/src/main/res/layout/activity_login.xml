<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="123dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/cook_guide_logo" />


    <EditText
        android:id="@+id/editTextEmaill"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:drawableRight="@drawable/__email"
        android:ems="10"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:hint="Tên đăng nhập"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:background="@drawable/rectangle_7"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:paddingRight="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rectangle_7"
        android:drawableRight="@drawable/__password"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="#808080" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:text="Đăng kí"
        android:textColor="#0386D0"
        android:clickable="true"
        android:onClick="onClick" />

        <TextView
            android:id="@+id/textViewForgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Quên mật khẩu?"
            android:textColor="#0386D0" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:background="#0386D0"
        android:bottomLeftRadius="50dp"
        android:bottomRightRadius="50dp"
        android:gravity="center"
        android:text="ĐĂNG NHẬP"
        android:topLeftRadius="50dp"
        android:textColor="@color/white"
        android:topRightRadius="50dp" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hoặc"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đăng nhập với"
        android:textColor="#000000"
        android:textColorHint="#000000" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:gravity="center_horizontal">
    <ImageView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:clickable="true"
        android:onClick="onClick"
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/google2" />
</LinearLayout>

</LinearLayout>