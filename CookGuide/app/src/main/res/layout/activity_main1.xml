<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity1">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavBarMain">
    </androidx.viewpager.widget.ViewPager>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavBarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_nav_bar_main"
        android:background="#F6F3F3"
        app:itemBackground="@color/navbar_main"
        app:itemIconTint="@color/custom_color_bottom_navbar"
        app:itemTextColor="@color/custom_color_bottom_navbar">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>