<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="200dp"
    android:background="@drawable/custom_shape_item_home"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageFoodHome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/tomnuong123"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="10dp"
        app:riv_corner_radius_top_right="10dp"></com.makeramen.roundedimageview.RoundedImageView>
    <TextView
        android:id="@+id/textViewNameFoodHome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:text="Mì ramen siêu cay abc acb"
        android:textSize="17sp"
        android:textFontWeight="500"
        android:gravity="center_vertical"
        android:background="#C4E6F0"
        android:fontFamily="serif"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_alarm_24"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView
            android:id="@+id/textViewTotalTimeHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="155 phút"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"></TextView>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_baseline_flash_on_24"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView
            android:id="@+id/textViewLevelHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Trung bình"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonReactFaceHome"
            android:layout_width="32dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:background="@drawable/custom_button_reaction"
            android:paddingRight="1dp"
            android:text="&#128523; 2"
            android:textColor="@color/white"
            android:textSize="9sp"></Button>

        <Button
            android:id="@+id/buttonReactHeartHome"
            android:layout_width="32dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:background="@drawable/custom_button_reaction"
            android:paddingRight="1dp"
            android:text="&#10084; 2"
            android:textColor="@color/white"
            android:textSize="9sp"></Button>

        <Button
            android:id="@+id/buttonReactClapHome"
            android:layout_width="32dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:background="@drawable/custom_button_reaction"
            android:paddingRight="1dp"
            android:text="&#128079; 2"
            android:textColor="@color/white"
            android:textSize="9sp"></Button>
    </LinearLayout>

</LinearLayout>