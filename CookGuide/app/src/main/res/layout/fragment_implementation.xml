<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImplementationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--        default: 245dp-->
        <ListView
            android:id="@+id/listViewImplementation"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:divider="@color/white"></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="7dp">
            <Button
                android:id="@+id/buttonNextStep"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:text="Bước tiếp theo"
                android:layout_marginRight="15dp"
                android:textAllCaps="false"
                android:padding="0dp"
                android:textSize="18sp"
                android:textColor="#FFFF"
                android:background="@drawable/custom_button_timestamp"></Button>
            <Button
                android:id="@+id/buttonSuccessFood"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:text="Hoàn thành"
                android:layout_marginRight="15dp"
                android:textAllCaps="false"
                android:padding="0dp"
                android:textSize="18sp"
                android:textColor="#FFFF"
                android:background="@drawable/custom_button_finish_guide"></Button>
            <Button
                android:id="@+id/buttonCountTime"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:text="Bấm giờ"
                android:textAllCaps="false"
                android:padding="0dp"
                android:textSize="18sp"
                android:textColor="#FFFF"
                android:background="@drawable/custom_button_timestamp"></Button>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>