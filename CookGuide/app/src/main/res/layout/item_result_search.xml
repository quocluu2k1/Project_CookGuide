<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginRight="7dp"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="7dp"
    android:orientation="horizontal"
    android:background="@drawable/custom_shape_item_result_search"
    android:elevation="7dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageFoodResult"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/tomnuong123"
        android:scaleType="centerCrop"
        app:riv_corner_radius="5dp"></com.makeramen.roundedimageview.RoundedImageView>
    <LinearLayout
        android:id="@+id/layoutItemResultSearch"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewNameFoodResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="Mì ramen siêu cay"
            android:textSize="19sp"
            android:textFontWeight="500"
            android:gravity="center_vertical"
            android:fontFamily="serif"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_alarm_24"
                android:layout_gravity="center_vertical">
            </ImageView>
            <TextView
                android:id="@+id/textViewTotalTimeResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="155 phút"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"></TextView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_flash_on_24"
                android:layout_gravity="center_vertical">
            </ImageView>
            <TextView
                android:id="@+id/textViewLevelResult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Trung bình"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"></TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>