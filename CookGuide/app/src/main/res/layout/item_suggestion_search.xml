<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/custom_shape_item_history_search"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:elevation="2dp">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_saved_search_35"></ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewContentSuggestionSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bò kho bánh mì"
            android:fontFamily="serif"
            android:textSize="19sp"
            android:textFontWeight="500"></TextView>
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageButtonSelectSuggestion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_north_west_35"
        ></ImageButton>
</LinearLayout>