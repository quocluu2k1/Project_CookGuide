<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Timestamp1Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/buttonCloseTimestamp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_close_24"
            android:background="@drawable/custom_button_circle_close"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center">

        </ImageButton>
        <ImageButton
            android:id="@+id/buttonResetTime"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_refresh_36"
            android:padding="@null"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="235dp"></ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/textTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bấm thời gian"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="1000"
            android:progress="1000"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <TextView
            android:id="@+id/textviewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:text="01:00:00"
            android:textSize="32sp"></TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textViewStepGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thit luoc so qua, vot ra de rao. Tiep theo, lam nong dau an trong chao, cho thit vao xao khoang 15 phut"
            android:textSize="19sp"
            android:textColor="#FF4800"></TextView>
    </ScrollView>

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@drawable/ic_baseline_play_circle_filled_24"
        android:layout_gravity="center"
        android:padding="0sp"
        android:background="#ffff"
        android:layout_marginTop="4dp"></ImageButton>
</LinearLayout>